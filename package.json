    "@actions/http-client": "^2.2.3",
    "@actions/tool-cache": "^2.0.1",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@actions/io": "^1.1.3",
    "@types/jest": "^28.1.8",
    "@types/node": "^16.18.108",
    "@types/semver": "^7.5.8",
    "@vercel/ncc": "^0.38.2",
    "jest": "^28.1.3",
    "jest-circus": "^29.7.0",
    "nock": "^13.5.5",
    "prettier": "^3.3.3",
    "ts-jest": "^28.0.8",
    "typescript": "^5.6.2"
