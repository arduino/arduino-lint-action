    "lint"
  ],
  "author": "Arduino",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.8.2",
    "@actions/http-client": "^2.0.1",
    "@actions/tool-cache": "^2.0.1",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@actions/io": "^1.1.2",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.38",
    "@types/semver": "^7.3.9",
    "@vercel/ncc": "^0.34.0",
    "jest": "^28.1.0",
    "jest-circus": "^28.1.0",
    "nock": "^13.2.4",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "typescript": "^4.7.2"
  }
